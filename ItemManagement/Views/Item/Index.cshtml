@model IEnumerable<ItemManagement.Models.Item>

@{ ViewData["Title"] = "Home"; }


<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Item List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-controller="Item" asp-action="Add" class="btn btn-info form-control text-white">
            Add New Item
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="dt" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Icon</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/itemList.js"></script>
}